{
  "name": "koa2-validation",
  "version": "0.1.0",
  "description": "A koa2 middleware to validate the request with Joi.",
  "main": "index.js",
  "scripts": {
    "test": "nyc ava -v",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "coverage_local": "nyc report --reporter=html",
    "release": "standard-version"
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "concurrency": 25,
    "serial": true,
    "failFast": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gedennis/koa2-validation.git"
  },
  "keywords": [
    "koa2",
    "joi",
    "validation"
  ],
  "author": "Dennis.ge",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gedennis/koa2-validation/issues"
  },
  "homepage": "https://github.com/gedennis/koa2-validation#readme",
  "dependencies": {
    "joi": "^10.6.0",
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "ava": "^0.19.0",
    "coveralls": "^2.13.1",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.2.1",
    "nyc": "^11.1.0",
    "standard-version": "^4.2.0",
    "supertest": "^3.0.0"
  }
}
